{
    "defaultSeverity": "warning",
    "extends": [
        "tslint:recommended"
    ],
    "jsRules": {},
    "rules": {
        "await-promise": true,
        // "completed-docs": [
        //     true,
        //     {
        //       "enums": true,
        //       "functions": {"visibilities": ["exported"]},
        //       "methods": {"privacies": ["public", "protected"]},
        //       "properties": {
        //         "tags": {"content": {"see": ["#.*"]}, "existence": ["inheritdoc"]},
        //         "privacies": ["protected", "public"]
        //       }
        //     }
        // ],
        "no-eval": false,
        "no-void-expression": true,
        "no-duplicate-super": true,
        "no-duplicate-switch-case": true,
        "no-duplicate-variable": true,
        "no-unused-variable": true,
        "no-invalid-this": false,
        "no-null-keyword": false,
        "no-return-await": true,
        "no-string-literal": false,
        "no-string-throw": true,
        "no-this-assignment": true,
        "no-unsafe-finally": true,
        "no-var-keyword": true,
        "no-var-requires": false,
        "only-arrow-functions": false,
        "strict-type-predicates": true,
        "triple-equals": true,
        "typeof-compare": true,
        "eofline": true,
        "indent": true,
        "linebreak-style": true,
        "align": true,
        "arrow-parens": true,
        "interface-name": false,
        "arrow-return-shorthand": true,
        "callable-types": true,
        "comment-format": true,
        "interface-over-type-literal": true,
        "no-angle-bracket-type-assertion": false,
        "no-consecutive-blank-lines": true,
        "no-irregular-whitespace": true,
        "no-trailing-whitespace": true,
        "no-unnecessary-initializer": true,
        "no-unnecessary-qualifier": true,
        "object-literal-shorthand": true,
        "object-literal-key-quotes": true,
        "object-literal-sort-keys": false,
        "one-line": true,
        "one-variable-per-declaration": false,
        "ordered-imports": true,
        "prefer-method-signature": true,
        "prefer-while": true,
        "semicolon": true,
        "space-before-function-paren": [true, {"anonymous": "always", "named": "always", "asyncArrow": "always", "constructor": "never", "method": "never"}],
        "space-within-parens": true,
        "whitespace": true,
        "no-console": false,
        "no-unused-expression": false,
        "max-line-length": false,
        "variable-name": false,
        "typedef-whitespace": [
            true,
            {
                "call-signature": "nospace",
                "index-signature": "nospace",
                "parameter": "nospace",
                "property-declaration": "nospace",
                "variable-declaration": "nospace"
            },
            {
                "call-signature": "onespace",
                "index-signature": "onespace",
                "parameter": "onespace",
                "property-declaration": "space",
                "variable-declaration": "space"
            }
        ],
        "trailing-comma": [
            true,
            {
              "multiline": {
                "objects": "never",
                "arrays": "never",
                "functions": "never",
                "typeLiterals": "ignore"
              },
              "esSpecCompliant": true
            }
          ]
    },
    "rulesDirectory": []
}